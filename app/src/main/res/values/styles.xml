<resources>

    <style name="Widget.Theme.RemindMe.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.RemindMe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="cardOverlay">
        <item name="cardBackgroundColor">@color/cardview_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>



    <style name="coloredButtonOverlay">
        <item name="android:layout_width">@dimen/button_diameter</item>
        <item name="android:layout_height">@dimen/button_diameter</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">?attr/main_color_natural</item>
        <item name="android:background">?attr/button_background</item>
    </style>

 <style name="whiteButtonOverlay">
        <item name="android:layout_width">@dimen/button_diameter</item>
        <item name="android:layout_height">@dimen/button_diameter</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">?attr/main_color_dark</item>
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="colorPicker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:src">@drawable/icon_transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="settingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">@dimen/settings_screen_titles</item>
        <item name="android:textColor">?attr/main_color_natural</item>
    </style>


