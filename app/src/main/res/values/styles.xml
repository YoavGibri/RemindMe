<resources>

    <style name="Widget.Theme.RemindMe.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.RemindMe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="cardOverlay">
        <item name="cardBackgroundColor">@color/cardview_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="button_with_shadow">
        <item name="android:elevation">@dimen/app_elevation</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <style name="coloredButtonOverlay" parent="button_with_shadow">
        <item name="android:layout_width">@dimen/button_diameter</item>
        <item name="android:layout_height">@dimen/button_diameter</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">?attr/main_color_natural</item>
        <item name="android:background">@drawable/background_round_button_colored</item>
    </style>

    <style name="whiteButtonOverlay" parent="button_with_shadow">
        <item name="android:layout_width">@dimen/button_diameter</item>
        <item name="android:layout_height">@dimen/button_diameter</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">?attr/main_color_dark</item>
        <item name="android:background">@drawable/background_round_button_white</item>
    </style>

    <!--    <style name="colorPicker">-->
    <!--        <item name="android:layout_width">0dp</item>-->
