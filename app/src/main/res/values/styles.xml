    <!--    </style>-->
    <style name="colorPicker">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:src">@drawable/icon_transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">?attr/main_color_natural</item>
    </style>

    <style name="settingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">@dimen/settings_screen_titles</item>
        <item name="android:textColor">?attr/main_color_natural_dark</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>


