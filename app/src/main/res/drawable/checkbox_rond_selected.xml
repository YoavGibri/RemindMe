<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center"
        android:width="@dimen/checkbox_size"
        android:height="@dimen/checkbox_size">

        <shape
            android:layout_width="wrap_content"
            android:shape="oval">

            <solid android:color="?attr/main_color_dark" />

            <stroke
                android:width="1dp"
                android:color="@color/black" />

        </shape>
    </item>
    <item
        android:gravity="center"
        android:width="@dimen/checkbox_v_size"
        android:height="@dimen/checkbox_v_size"
        android:drawable="@drawable/icon_v" />
</layer-list>
